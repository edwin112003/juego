  <link href="/css/estilo.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
  <body>
    <div class=" d-flex justify-content-center p-4">
      <div class="p-4">
        <center><a href="/links/logout" class="btn btn-info">Cerrar sesion</a></center>
      </div>
      <div>
         <ul class="list-group">
           <li class="list-group-item"><b>Tabla de Scores</b></li>
          {{#each scores}}
          <li class="list-group-item">
          <div class="d-flex flex-row">
            {{usertag}} : {{score}}
          </div>
          </li>
          {{/each}}
        </ul>     
      </div>
      
    </div>
    <div class="container p-4">
    <div class="row">
        <div class=" col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form  action="/links/sala" method="POST">
                      <div class="form-group">
                        <h5 class="text-center"><label for="room">Sala</label></h5>
                      </div>
                      <div class="form-group d-flex justify-content-center">                        
                        <select class="form-select btn btn-info col-sm-10 p-3" aria-label="Default select example" name="room" id="room">              
                          <option value="1" >Sala1</option>
                          <option value="2" >Sala2</option>
                          <option value="3" >Sala3</option>
                          <option value="4" >Sala4</option>
                          <option value="5" >Sala5</option>
                        </select>
                      </div>
                      <div class="form-group d-flex justify-content-center">
                        <button type="submit" class="btn col-sm-10" >Unirse a la sala</button>
                      </div>                      
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
      
    
  </body>

